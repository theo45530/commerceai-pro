# =============================================================================
# COMMERCEAI PRO - API GATEWAY ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# GENERAL SETTINGS
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=4000
API_GATEWAY_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# MongoDB
MONGODB_URI=mongodb://localhost:27017/commerceai-pro
MONGODB_TEST_URI=mongodb://localhost:27017/commerceai-pro-test

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# SECURITY & AUTHENTICATION
# -----------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_IV_LENGTH=16

# Two-Factor Authentication
TWO_FACTOR_ISSUER=CommerceAI Pro
TWO_FACTOR_WINDOW=1
TWO_FACTOR_BACKUP_CODES_COUNT=10

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_RESET_EXPIRES=3600000
PASSWORD_SALT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# -----------------------------------------------------------------------------
# PAYMENT & BILLING (STRIPE)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PRICE_STARTER=price_your_starter_plan_price_id
STRIPE_PRICE_PROFESSIONAL=price_your_professional_plan_price_id
STRIPE_PRICE_ENTERPRISE=price_your_enterprise_plan_price_id

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION
# -----------------------------------------------------------------------------
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@commerceai-pro.com
EMAIL_FROM_NAME=CommerceAI Pro

# SendGrid (Alternative)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@commerceai-pro.com

# -----------------------------------------------------------------------------
# AI SERVICES
# -----------------------------------------------------------------------------
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# OAUTH PLATFORM INTEGRATIONS
# -----------------------------------------------------------------------------
# Meta (Facebook/Instagram)
META_CLIENT_ID=your_meta_app_id
META_CLIENT_SECRET=your_meta_app_secret
META_WEBHOOK_SECRET=your_meta_webhook_secret

# Google Ads
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/auth/oauth/callback/google

# TikTok
TIKTOK_CLIENT_ID=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Instagram
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Twitter/X
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Shopify
SHOPIFY_CLIENT_ID=your_shopify_api_key
SHOPIFY_CLIENT_SECRET=your_shopify_secret_key
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret

# WhatsApp Business
WHATSAPP_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_SECRET=your_whatsapp_webhook_secret

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# LOGGING & MONITORING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=combined
REQUEST_LOGGING=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# -----------------------------------------------------------------------------
# PERFORMANCE & CACHING
# -----------------------------------------------------------------------------
CACHE_TTL=300
CLUSTER_MODE=false
MAX_MEMORY_USAGE=512
REQUEST_TIMEOUT=30000

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
DEBUG_MODE=true
VERBOSE_LOGGING=true
CORS_DEBUG=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# -----------------------------------------------------------------------------
# WEBHOOK CONFIGURATION
# -----------------------------------------------------------------------------
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=5000

# -----------------------------------------------------------------------------
# AI AGENTS CONFIGURATION
# -----------------------------------------------------------------------------
# Agent Ports
AGENT_SAV_PORT=5001
AGENT_PUBLICITE_PORT=5002
AGENT_CONTENU_PORT=5003
AGENT_ANALYSE_PORT=5004
AGENT_PAGES_PORT=5005
AGENT_EMAIL_PORT=5006

# Agent Settings
AGENT_CONTEXT_LENGTH=4000
AGENT_MAX_TOKENS=1000
AGENT_TEMPERATURE=0.7
AGENT_REQUEST_LIMIT=100
AGENT_REQUEST_WINDOW=3600

# -----------------------------------------------------------------------------
# BACKUP & MAINTENANCE
# -----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION=7
MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# ANALYTICS & TRACKING
# -----------------------------------------------------------------------------
# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# -----------------------------------------------------------------------------
# NOTIFICATIONS
# -----------------------------------------------------------------------------
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Push Notifications
PUSH_NOTIFICATION_ENABLED=true
FCM_SERVER_KEY=your_firebase_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_BUNDLE_ID=com.commerceai.pro

# -----------------------------------------------------------------------------
# LIMITS & QUOTAS
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_PER_USER=100

# -----------------------------------------------------------------------------
# LOCALIZATION
# -----------------------------------------------------------------------------
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,es,de
DEFAULT_TIMEZONE=UTC

# -----------------------------------------------------------------------------
# GDPR & COMPLIANCE
# -----------------------------------------------------------------------------
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555
DATA_EXPORT_ENABLED=true
DATA_ANONYMIZATION_ENABLED=true
COOKIE_CONSENT_REQUIRED=true

# -----------------------------------------------------------------------------
# AUDIT & SECURITY
# -----------------------------------------------------------------------------
AUDIT_ENABLED=true
AUDIT_LOG_LEVEL=info
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
SESSION_SECURITY=strict

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_BACKUP=true
FEATURE_RATE_LIMITING=true
FEATURE_TWO_FACTOR=true
FEATURE_SSO=true
FEATURE_GDPR=true
FEATURE_AUDIT=true
FEATURE_WEBHOOKS=true
FEATURE_SUPPORT_TICKETS=true

# -----------------------------------------------------------------------------
# SERVICE URLS
# -----------------------------------------------------------------------------
SERVICE_API_GATEWAY=http://localhost:4000
SERVICE_FRONTEND=http://localhost:3000
SERVICE_AGENT_SAV=http://localhost:5001
SERVICE_AGENT_PUBLICITE=http://localhost:5002
SERVICE_AGENT_CONTENU=http://localhost:5003
