# Ekko SaaS Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Core Platform Configuration
NODE_ENV=production
PLATFORM_NAME=Ekko
PLATFORM_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://admin:commerceai2024@mongodb:27017/commerceai?authSource=admin
REDIS_URL=redis://:commerceai2024@redis:6379
RABBITMQ_URL=amqp://admin:commerceai2024@rabbitmq:5672

# JWT Configuration
JWT_SECRET=ekko-commerce-ai-secret-key-2024
JWT_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# SMTP Configuration for Email Marketing
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Platform API Keys (Optional - for direct integrations)
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# File Storage (for generated content)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Monitoring and Logging
LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
SESSION_SECRET=your_session_secret_here

# External Services
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
MIXPANEL_TOKEN=your_mixpanel_token

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Webhook URLs
WEBHOOK_BASE_URL=https://yourdomain.com/webhooks
