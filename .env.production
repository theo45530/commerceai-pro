# CommerceAI Pro - Configuration de Production
# Copiez ce fichier vers .env et configurez vos vraies clés API

# ===========================================
# CONFIGURATION GÉNÉRALE
# ===========================================
NODE_ENV=production
PORT=4000
DOMAIN=localhost
SSL_EMAIL=admin@example.com

# ===========================================
# BASE DE DONNÉES
# ===========================================
# MongoDB
MONGODB_URI=mongodb://commerceai-mongodb:27017/commerceai
MONGODB_HOST=commerceai-mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=commerceai

# Redis
REDIS_URL=redis://commerceai-redis:6379
REDIS_HOST=commerceai-redis
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@commerceai-rabbitmq:5672
RABBITMQ_HOST=commerceai-rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# ===========================================
# SÉCURITÉ
# ===========================================
# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# INTELLIGENCE ARTIFICIELLE
# ===========================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===========================================
# PLATEFORMES PUBLICITAIRES
# ===========================================
# Meta/Facebook Ads
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token
META_VERIFY_TOKEN=your-meta-verify-token
META_WEBHOOK_SECRET=your-meta-webhook-secret

# Google Ads
GOOGLE_ADS_CLIENT_ID=your-google-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-google-refresh-token
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-developer-token
GOOGLE_ADS_CUSTOMER_ID=your-google-customer-id

# TikTok Ads
TIKTOK_APP_ID=your-tiktok-app-id
TIKTOK_SECRET=your-tiktok-secret
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token

# ===========================================
# PLATEFORMES SOCIALES
# ===========================================
# Instagram Business
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-id

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# ===========================================
# E-COMMERCE
# ===========================================
# Shopify
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_WEBHOOK_SECRET=your-shopify-webhook-secret

# ===========================================
# COMMUNICATION
# ===========================================
# WhatsApp Business
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-id
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_WEBHOOK_SECRET=your-whatsapp-webhook-secret

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=CommerceAI Pro

# ===========================================
# SERVICES EXTERNES
# ===========================================
# Stripe (Paiements)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# SendGrid (Email)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# MONITORING ET LOGS
# ===========================================
# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-here

# ===========================================
# PERFORMANCE
# ===========================================
# Cache
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# Clustering
CLUSTER_ENABLED=true
CLUSTER_WORKERS=auto

# Memory
MAX_MEMORY_USAGE=512
GC_INTERVAL=60000

# ===========================================
# DÉVELOPPEMENT (à désactiver en production)
# ===========================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_CORS=true
CORS_ORIGIN=*

# ===========================================
# WEBHOOKS ET CALLBACKS
# ===========================================
WEBHOOK_BASE_URL=https://your-domain.com
CALLBACK_BASE_URL=https://your-domain.com

# ===========================================
# AGENTS AI - CONFIGURATION SPÉCIFIQUE
# ===========================================
# Agent SAV
SAV_PORT=5001
SAV_MAX_CONTEXT_LENGTH=4000
SAV_RESPONSE_TIMEOUT=30000

# Agent Publicité
PUBLICITE_PORT=5002
PUBLICITE_MAX_CAMPAIGNS=100
PUBLICITE_BUDGET_LIMIT=10000

# Agent Contenu
CONTENU_PORT=5003
CONTENU_MAX_CONTENT_LENGTH=5000
CONTENU_IMAGE_GENERATION=true

# Agent Analyse
ANALYSE_PORT=5004
ANALYSE_DATA_RETENTION_DAYS=90
ANALYSE_REPORT_FREQUENCY=daily

# Agent Pages
PAGES_PORT=5005
PAGES_MAX_PAGES_PER_USER=50
PAGES_TEMPLATE_CACHE_TTL=7200

# Agent Email
EMAIL_PORT=5006
EMAIL_MAX_RECIPIENTS=1000
EMAIL_RATE_LIMIT=100

# ===========================================
# BACKUP ET MAINTENANCE
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups/commerceai

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Maintenance en cours, veuillez patienter...

# ===========================================
# ANALYTICS
# ===========================================
# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX-X

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# ===========================================
# NOTIFICATIONS
# ===========================================
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#alerts

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# ===========================================
# LIMITES ET QUOTAS
# ===========================================
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=50mb
MAX_CONCURRENT_REQUESTS=100
API_RATE_LIMIT=1000
DAILY_API_QUOTA=100000

# ===========================================
# LOCALISATION
# ===========================================
DEFAULT_LANGUAGE=fr
DEFAULT_TIMEZONE=Europe/Paris
DEFAULT_CURRENCY=EUR

# ===========================================
# FEATURES FLAGS
# ===========================================
FEATURE_AI_CONTENT_GENERATION=true
FEATURE_AUTO_CAMPAIGNS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MULTI_PLATFORM=true
FEATURE_REAL_TIME_CHAT=true
FEATURE_EMAIL_AUTOMATION=true
FEATURE_PAGE_BUILDER=true

# ===========================================
# URLS DE SERVICES
# ===========================================
API_GATEWAY_URL=http://localhost:4000
PLATFORM_CONNECTORS_URL=http://localhost:4001
MONITORING_URL=http://localhost:4002
FRONTEND_URL=http://localhost:3000