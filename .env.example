MAX_REQUEST_SIZE=1048576
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# LOCALIZATION
# -----------------------------------------------------------------------------
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en,es,de,it
TIMEZONE=Europe/Paris

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
