# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# LOGGING & MONITORING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# -----------------------------------------------------------------------------
# PERFORMANCE
# -----------------------------------------------------------------------------
CACHE_TTL=3600
CLUSTER_MODE=false
MAX_MEMORY_USAGE=512
REQUEST_TIMEOUT=30000

# -----------------------------------------------------------------------------
# DEVELOPMENT
# -----------------------------------------------------------------------------
DEBUG_MODE=true
VERBOSE_LOGGING=true
CORS_ENABLED=true
RATE_LIMIT_ENABLED=false

# -----------------------------------------------------------------------------
# WEBHOOKS
# -----------------------------------------------------------------------------
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_TIMEOUT=10000

# -----------------------------------------------------------------------------
# AI AGENTS CONFIGURATION
# -----------------------------------------------------------------------------

# Agent Ports
AGENT_SAV_PORT=5001
AGENT_PUBLICITE_PORT=5002
AGENT_CONTENU_PORT=5003
AGENT_ANALYSE_PORT=5004
AGENT_PAGES_PORT=5005
AGENT_EMAIL_PORT=5006

# Agent Context
AGENT_CONTEXT_LENGTH=4000
AGENT_MAX_TOKENS=1000
AGENT_TEMPERATURE=0.7

# Agent Limits
AGENT_MAX_REQUESTS_PER_MINUTE=60
AGENT_MAX_CONCURRENT_REQUESTS=10

# -----------------------------------------------------------------------------
# BACKUP & MAINTENANCE
# -----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# ANALYTICS
# -----------------------------------------------------------------------------
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# -----------------------------------------------------------------------------
